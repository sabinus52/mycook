<div class="position-fixed bottom-0 right-0 p-3" style="z-index: 5; right: 0; bottom: 0;">
    {% for type, messages in app.session.flashBag.all %}
        {% for message in messages %}
            <div id="liveToast" class="toast hide" role="alert" aria-live="assertive" aria-atomic="true" data-autohide="true" data-delay="10000">
                <div class="toast-header bg-{{ type }}">
                    <!-- <img src="..." class="rounded mr-2" alt="..."> -->
                    <strong class="mr-auto" style="color:white">Notification ... </strong>
                    <small></small>
                    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="toast-body">{{ message|raw }}</div>
            </div>
        {% endfor %}
    {% endfor %}
</div>