<form action="{{ path('app_login') }}" method="post" class="px-4 py-3">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    <div class="form-group">
        <input type="text" name="_username" class="form-control" value="" placeholder="Identifiant" required>
    </div>
    <div class="form-group">
        <input type="password" name="_password" class="form-control" placeholder="Mot de passe" required>
    </div>
    <button type="submit" class="btn-mycook btn-small">Se connecter</button>
</form>
