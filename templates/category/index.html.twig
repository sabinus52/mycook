{% extends 'base.html.twig' %}

{% block title %} - Les catégories{% endblock %}

{% block body %}

    {% if is_granted('ROLE_ADMIN') %}
        <div class="float-right">
            <a href="{{ path('category_create') }}" class="btn btn-success"><i class="fas fa-plus"></i>&nbsp;Ajouter une catégorie</a>
        </div>
    {% endif %}
    <h1 class="my-4"><i class="fas fa-tag"></i>&nbsp;Catégories</h1>

    {% include 'include/_flashbag.html.twig' %}

    <div class="row my-2 text-center">
    {% for category in categories %}
        <div class="col-3">
            <figure class="figure">
                <a href="{{ path('category_show', {'id': category.id}) }}" class="img-hover-zoom rounded-circle"><img src="{{ asset(uri_category~'/'~category.id~'.jpg') | imagine_filter('cat') }}" class="figure-img img-fluid rounded-circle"></a>
                <figcaption><a href="{{ path('category_show', {'id': category.id}) }}" class="text-dark d-block mt-1 font-weight-bold">{{ category.name }}</a></figcaption>
            </figure>
        </div>
    {% endfor %}
    </div>

{% endblock %}
